{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
{# TODO: make visual changes #}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                {% for article in articles %}
                <div class="article-container my-3">
                    <div class="col-8">
                        <a href="{{ path('article', {slug: article.slug}) }}" class="w-100">
                            <img class="zdjecie" src="{{ article.imageFilename }}">
                            <div class="d-inline-block pl-3 align-middle">
                                <span>{{ article.title }}</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <span>{{ article.publishedAt|ago }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>
{% endblock %}