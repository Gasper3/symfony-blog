{% extends 'base.html.twig' %}

{% block body %}
{# TODO: change presentation of articles #}
    <div class="container">
        <div class="row mx-auto">
            {% for article in articles %}
                <div class="col-md-6 article-container my-2">
                    <div class="col-8">
                        <a href="{{ path('article', {slug: article.slug}) }}">
                            <img src="{{ article.imageFilename }}">
                            <div class="d-inline-block pl-3 align-middle">
                                <span>{{ article.title }}</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-4">
                        <span>{{ article.publishedAt|ago }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}