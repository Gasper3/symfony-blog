{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row mx-auto">
            <div class="col-2 d-flex justify-content-center">
                <img src="{{ article.imageFilename }}">
            </div>
            <div class="col-10">
                <h1>{{ article.title }}</h1>
            </div>
        </div>
        <div class="row mx-auto mt-3">
            {{ article.content }}
        </div>
    </div>
{% endblock %}